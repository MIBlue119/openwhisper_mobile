{
  "expo": {
    "name": "OpenWhispr",
    "slug": "openwhispr-mobile",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "openwhispr",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.openwhispr.mobile",
      "deploymentTarget": "17.0",
      "infoPlist": {
        "NSMicrophoneUsageDescription": "OpenWhispr needs microphone access to record your voice for speech-to-text transcription.",
        "UIBackgroundModes": [
          "audio"
        ],
        "AppGroupIdentifier": "group.com.openwhispr.mobile"
      },
      "entitlements": {
        "com.apple.security.application-groups": [
          "group.com.openwhispr.mobile"
        ]
      }
    },
    "extra": {
      "eas": {
        "build": {
          "experimental": {
            "ios": {
              "appExtensions": [
                {
                  "targetName": "OpenWhisprKeyboard",
                  "bundleIdentifier": "com.openwhispr.mobile.keyboard",
                  "entitlements": {
                    "com.apple.security.application-groups": [
                      "group.com.openwhispr.mobile"
                    ]
                  }
                }
              ]
            }
          }
        }
      }
    },
    "plugins": [
      "expo-router",
      [
        "expo-av",
        {
          "microphonePermission": "OpenWhispr needs microphone access to record your voice for speech-to-text transcription."
        }
      ],
      "expo-secure-store",
      "expo-sqlite",
      "./plugins/withWhisperKit",
      "@bacons/apple-targets"
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
